$ORIGIN ${domain}.
$TTL 86400
@         IN  SOA  ns.${domain}.  ${admin}. (
              0           ; serial
              21600       ; refresh after 6 hours
              3600        ; retry after 1 hour
              604800      ; expire after 1 week
              86400 )     ; minimum TTL of 1 day
;
;
          IN  NS     ns.${domain}.
ns        IN  A      ${ip}
;
;
@         IN  MX     10  smtp.${domain}.
smtp      IN  A      ${ip}
;
